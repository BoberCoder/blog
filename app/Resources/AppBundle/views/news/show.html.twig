{% extends '@App/base.html.twig' %}

{%  block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>{{ news.title }}</h1>
            </div>
                <div class="row">
                    <div class="col-md-3">
                        <a href="#" class="thumbnail">
                            <img src="http://www.securitylab.ru/upload/iblock/74f/74f9c7eeade55cc4f3a8d37899e36fdc.png" alt="">
                        </a>
                    </div>
                    <div class="col-md-6">
                        <p>
                            {{ news.subject}}
                        </p>
                        <hr>
                        <ul class="list-inline">
                            <li><i class="glyphicon glyphicon-music"></i> <a href="#">Назва категорії</a> | </li>
                            <li><i class="glyphicon glyphicon-calendar"></i> {{ news.date|date('Y-m-d') }}|</li>
                            <li><i class="icon-comment"></i> <a href="#">{{ news.coments.count }} Comments</a></li>
                            <li><i class="icon-tags"></i> Tags : <a href="#"><span class="label label-info">Snipp</span></a>
                                <a href="#"><span class="label label-info">Bootstrap</span></a>
                                <a href="#"><span class="label label-info">UI</span></a>
                                <a href="#"><span class="label label-info">growth</span></a></li>
                        </ul>
                        {% if news.coments.toArray == true %}
                            <div>
                                {{ render(controller('AppBundle:Comment:index',{'id': news.id})) }}
                            </div>
                            <div>
                                {{ render(controller('AppBundle:Comment:new',{'id': news.id})) }}
                            </div>
                            {% else %}
                            <div>
                                {{ render(controller('AppBundle:Comment:new',{'id': news.id})) }}
                            </div>
                        {% endif %}

                        <div style="height: 100px" align="center"><a class="btn btn-default btn-lg" href="{{ path('news_index') }}">Back to the list</a></div>
                    </div>
                    <div class="col-md-3">
                        <ul class="list-inline">
                            <li><a class="btn btn-info btn-sm" href="{{ path('news_edit', { 'id': news.id }) }}">Edit</a></li>
                            <li>{{ form_start(delete_form) }}
                                <input class="btn btn-info btn-sm" type="submit" value="Delete">
                                {{ form_end(delete_form) }}
                            </li>
                        </ul>
                    </div>
                </div>
        </div>
{% endblock content %}

