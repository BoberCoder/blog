{% extends '@App/news/show.html.twig' %}

{% block body %}

<div class="container-fluid">
            <h3>Comments</h3>
            {% for comment in comments %}
            <div class="row">
                <div class="col-md-2">
                    <div class="thumbnail">
                        <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>{{ comment.username }}</strong> <span class="text-muted">{{ comment.date|date('Y-m-d') }}</span>
                        </div>
                        <div class="panel-body">
                            {{ comment.text }}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}

</div>

{% endblock  %}
